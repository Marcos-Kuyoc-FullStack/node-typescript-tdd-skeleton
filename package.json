{
  "name": "node-typescript-tdd-skeleton",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "build": "tsc",
    "prestart": "yarn run build",
